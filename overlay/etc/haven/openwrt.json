{
  "boot-source": {
    "kernel_image_path": "/usr/lib/haven/vmlinux",
    "boot_args": "console=ttyS0 reboot=k panic=1 pci=off"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "/usr/lib/haven/router.img",
      "is_root_device": true,
      "is_read_only": false
    }
  ],
  "network-interfaces": [
    {
      "iface_id": "wan0",
      "guest_mac": "02:FC:00:00:00:01",
      "host_dev_name": "tap-vm-wan"
    },
    {
      "iface_id": "lan0",
      "guest_mac": "02:FC:00:00:00:02",
      "host_dev_name": "tap-vm-lan"
    }
  ],
  "machine-config": {
    "vcpu_count": 2,
    "mem_size_mib": 1024,
    "smt": false
  }
}
